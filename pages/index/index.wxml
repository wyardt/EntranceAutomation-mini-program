<!--index.wxml-->
<import src="../common/head.wxml" />
<import src="../common/foot.wxml" />

<view class="container">
  <view class="index-hd">
    <view class="index-desc">This e-Guide will take over now to direct you to the house</view>
  </view>
  <text class="dinnerTime"> Welcome, {{userInfo.nickName}}</text>
  <text class="dinnerTime"> {{dinner_msg}} </text>
  <text class="dinnerTime"> {{dinner_msg_more}} </text>
  <view>
    <map id="myMap" show-location />
    <button type="primary" disabled="{{button_disabled}}" bindtap="openLocation">Check where to go</button>
    <button bindtap="moveToMyLocation">Move to my position</button>
    <button bindtap="birdsEyeView">Bird's-eye view</button>
  </view>
</view>
